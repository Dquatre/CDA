<Window x:Class="MultiFenetre.Fenetre2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiFenetre"
        mc:Ignorable="d"
        Title="Fenetre2" Height="450" Width="800">
    <Grid Background="#FF415EA7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblCentre" Grid.ColumnSpan="3" HorizontalAlignment="Center"  VerticalAlignment="Center" FontFamily="Impact" FontSize="24" Foreground="White"  />
        <TextBox x:Name="txtRetour"  Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontSize="24" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
